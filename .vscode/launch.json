  "version": "0.2.0",
  "configurations": [

      {
          "name": "Launch Package Server",
          "type": "go",
          "request": "launch",
          "mode": "debug",
          "program": "${workspaceFolder}/cmd/main.go",
          "args": ["server", "--config", "../convoy.json"]
      },
      {
          "name": "Launch Package Stream",
          "type": "go",
          "request": "launch",
          "mode": "debug",
          "program": "${workspaceFolder}/cmd/main.go",
          "args": ["stream", "--config", "../convoy.json"]
      },
      {
          "name": "Launch Package Worker",
          "type": "go",
          "request": "launch",
          "mode": "debug",
          "program": "${workspaceFolder}/cmd/main.go",
          "args": ["worker", "--config", "../convoy.json"]
      },
      {
          "name": "Launch Package Ingest",
          "type": "go",
          "request": "launch",
          "mode": "debug",
          "program": "${workspaceFolder}/cmd/main.go",
          "args": ["ingest", "--interval", "10", "--config", "../convoy.json"]
      },
      {
          "name": "Launch Current File",
          "type": "go",
          "request": "launch",
          "mode": "debug",
          "program": "${file}"
      },
