# Convoy Monitoring Configuration
# Copy this file to .env and update the values

# Central Loki server URL (where logs will be sent)
# For local development: http://localhost:3100
# For remote server: http://your-monitoring-server:3100
LOKI_URL=http://localhost:3100

# Optional: Instance identifier for multi-instance deployments
CONVOY_INSTANCE_NAME=convoy-dev

# Optional: Additional Promtail labels
CONVOY_ENVIRONMENT=development
CONVOY_REGION=local
